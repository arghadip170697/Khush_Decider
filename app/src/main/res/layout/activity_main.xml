<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity" android:backgroundTint="#C1968013">

    <TextView
            android:layout_width="320dp"
            android:layout_height="58dp"
            android:text="@string/jhonny"
            android:textSize="30sp" android:fontFamily="@font/audiowide"
            android:textColor="#000000"
            android:id="@+id/choices"
            android:gravity="center"
            android:foregroundGravity="center"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="116dp"
            app:layout_constraintBottom_toTopOf="@+id/inputs" app:layout_constraintHorizontal_bias="0.492"
    />
    <Button
            android:text="@string/decide"
            android:layout_width="367dp"
            android:layout_height="48dp"
            android:id="@+id/decide" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="gravity" android:textSize="24sp"
            android:layout_marginBottom="16dp" android:textAllCaps="false" android:backgroundTint="#1E5F1F"/>
    <Button
            android:text="@string/add"
            android:layout_width="192dp"
            android:layout_height="48dp"
            android:id="@+id/adding" android:textStyle="bold"
            android:backgroundTint="#1B5E20" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/decide" app:layout_constraintHorizontal_bias="0.497"/>
    <ImageView
            android:layout_width="286dp"
            android:layout_height="125dp" app:srcCompat="@drawable/log"
            android:id="@+id/logo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.495"
            android:contentDescription="TODO"
            android:layout_marginTop="96dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/choices"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputs"
            android:textSize="24sp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/adding" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:hint="Add a new khush" android:autofillHints=""
            android:gravity="center"/>

</android.support.constraint.ConstraintLayout>